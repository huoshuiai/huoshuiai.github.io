---
import Layout from '../layouts/Layout.astro';
---

<Layout title="生平 - 黄若兰纪念网站">
    <div class="life-container">
        <div class="timeline">
            <div class="timeline-item">
                <div class="timeline-date">2020</div>
                <div class="timeline-content">
                    <p class="placeholder-text">在这里添加生平事迹...</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-date">2021</div>
                <div class="timeline-content">
                    <p class="placeholder-text">在这里添加生平事迹...</p>
                </div>
            </div>
            <div class="timeline-item">
                <div class="timeline-date">2022</div>
                <div class="timeline-content">
                    <p class="placeholder-text">在这里添加生平事迹...</p>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .life-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 4rem 1rem;
    }

    .timeline {
        position: relative;
        padding: 2rem 0;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 1px;
        height: 100%;
        background: var(--primary-light);
    }

    .timeline-item {
        margin: 4rem 0;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 2rem;
    }

    .timeline-date {
        min-width: 100px;
        text-align: right;
        color: var(--secondary);
        font-weight: 500;
    }

    .timeline-content {
        flex: 1;
        max-width: 400px;
        background: rgba(255, 255, 255, 0.5);
        padding: 1.5rem;
        border-radius: 1rem;
    }

    .placeholder-text {
        color: var(--text-light);
        font-style: italic;
    }

    @media (max-width: 768px) {
        .life-container {
            padding: 2rem 1rem;
        }

        .timeline::before {
            left: 2rem;
        }

        .timeline-item {
            flex-direction: column;
            margin-left: 2rem;
            gap: 0.5rem;
        }

        .timeline-date {
            text-align: left;
        }
    }
</style>